# 2ndShift Environment Variables
# Copy this file to .env.local and fill in your values

# ============================================
# Database (Supabase) - REQUIRED
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# JWT Authentication - REQUIRED FOR PRODUCTION
# ============================================
# Generate strong secrets: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-minimum-32-characters
REFRESH_SECRET=your-refresh-secret-key-minimum-32-characters

# ============================================
# Application URL - REQUIRED FOR PRODUCTION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production: NEXT_PUBLIC_APP_URL=https://2ndshift.vercel.app

# ============================================
# Payment Provider (Razorpay) - OPTIONAL
# ============================================
# Get from Razorpay Dashboard
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# ============================================
# Email Service (Resend) - OPTIONAL
# ============================================
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@2ndshift.in

# ============================================
# OAuth Providers - OPTIONAL
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ============================================
# Analytics - OPTIONAL
# ============================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# Feature Flags - OPTIONAL
# ============================================
FEATURE_ROLE_HOME=true
ALLOW_DEMO_PAYMENTS=false
ALLOW_DEMO_EMAILS=false

# ============================================
# Environment
# ============================================
NODE_ENV=development
# Production: NODE_ENV=production
